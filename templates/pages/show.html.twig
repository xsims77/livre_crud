{% extends "themes/base.html.twig" %}

{% block title %}Livre - Le détail{% endblock %}

{% block main %}
    <h1 class="text-center my-3 display-5">Détails des livres</h1>

    <div class="container text-center mt-5">
        <div class="row">
            <div class="col-md-6 mx-auto">
                <div class="card-body">
                <h5 class="card-title">Titre: {{ livre.titre }}</h5>
                <h5 class="card-title">Genre: {{ livre.genre }}</h5>
                <h5 class="card-title">Auteur: {{ livre.auteur }}</h5>
                <h5 class="card-title">Note: {{ livre.note }}</h5>
                </div>
            </div>
        </div>
    </div>
{% endblock %}